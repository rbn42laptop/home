import QtQuick 2.2

Item{
    property var shell:"fish" 
    property var font_size:12

    property var font_family:"monacobsemi,Droid Sans Mono for Powerline,everson mono,WenQuanYi Micro Hei,setofont"   
    //setofont 日文,但是wqy已经支持了.  
    //everson可以显示等宽特殊字符.
    //powerline用不到.
    //"Lucida Gr" 

    property var color_scheme:"Transparent" //cool-retro-term

    property var display_ratio:1.4

    //一般字体似乎和glow效果不配,反而comic类型的字体表现效果比较好.
    property var title_font:'setofont,WenQuanYi Micro Hei'

    //这两个好像没在用了.
    property var focused_color:'#8ff'
    property var unfocused_color:'#eee'

    property var window_width:860
    property var window_height:440
    property var shadow_radius:5
    property var shadow_offset:1
    property var animation_duration:300

    property var frame_border: 1 //0.3

    property var shadow_spread:0.4
    property var title_shadow_spread:0.6

    property var maximized_state:'MAXIMIZED'
    property var background_color:'white' // 'transparent'
    property var background_opacitiy: 0.0 // 0.3 // 0
    property var border_shadow_active: 1
    property var border_shadow_deactive:5
    property var border_color_active:'#8ff' //'white' //0 // 1 // 1
    property var border_color_deactive:'#555' //'black'  //// 0 // 1 //5
    property var enable_border_shadow:false
    property var enable_shadow:true
}


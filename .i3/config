# Press $mod+o followed by either f, t, Esc or Return to launch firefox,
## thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [f]irefox [t]hunderbird
bindsym $mod+o mode "$mode_launcher";exec notify-send launch mode on

mode "$mode_launcher" {
    bindsym f exec firefox
    bindsym t exec thunderbird
    bindsym g exec goldendict

    bindsym Esc mode "default";exec notify-send launch mode off
    bindsym Return mode "default";exec notify-send launch mode off
    bindsym $mod+o mode "default";exec notify-send launch mode off
}














